def merge_sort(arr):
    if len(arr) <= 1:
        return arr

    # 1: Divide the array into two halves
    mid = len(arr) // 2
    left_half = arr[:mid]
    right_half = arr[mid:]

    # 2: Conquer by recursively sorting both halves
    left_sorted = merge_sort(left_half)
    right_sorted = merge_sort(right_half)

    # 3: Combine the sorted halves
    return merge(left_sorted, right_sorted)

def merge(left, right):
    sorted_array = []
    i = j = 0

    # Merge the two sorted halves by comparing elements
    while i < len(left) and j < len(right):
        if left[i] < right[j]:
            sorted_array.append(left[i])
            i += 1
        else:
            sorted_array.append(right[j])
            j += 1

    # If there are any remaining elements in either half, add them
    sorted_array.extend(left[i:])
    sorted_array.extend(right[j:])

    return sorted_array

# Example
arr = [38, 27, 43, 3, 9, 82, 10, 27, 10]

sorted_arr = merge_sort(arr)
print(f"Sorted array: {sorted_arr}")






